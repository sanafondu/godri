<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="godriwaladarshan.xyz">

    <!-- Adding Internet Permission -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DhamActivity"
            android:screenOrientation="portrait"
            android:label="Baba Ke Dham"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".LiveActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AudioBhajanas"
            android:label="Bhajan"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AudioRingtone"
            android:screenOrientation="portrait"
            android:label="Ringtone"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AudioAarti"
            android:screenOrientation="portrait"
            android:label="Aarti"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LyricsActivity"
            android:screenOrientation="portrait"
            android:label="Lyrics"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MahimaActivity"
            android:screenOrientation="portrait"
            android:label="Baba Ki Mahima"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JivniActivity"
            android:screenOrientation="portrait"
            android:label="Baba Ki Jivni"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PrasadActivity"
            android:screenOrientation="portrait"
            android:label="Godriwala Prasad"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LyricsFullImage"
            android:screenOrientation="portrait"
            android:label="Jai Baba Godriwala"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".GridViewActivity"
            android:screenOrientation="portrait"
            android:label="Gallery"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DetailsActivity"
            android:screenOrientation="portrait"
            android:label="Download Image"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Contact"></activity>
        <!--
           Defining Services
       -->
        <service
            android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>