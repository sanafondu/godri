<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AudioBhajanas"
    android:background="#fbe2f2">
<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    card_view:cardBackgroundColor="#fbe2f2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >


    <LinearLayout
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <TextView
        android:textColor="@color/black"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/bhajan_name"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="DIL THI CHARI TO LAAYE"
        android:textSize="18dp"
        android:autoText="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Download"
            android:id="@+id/download_bhajan"
            android:textColor="#ffffff"
            android:background="#ad0f4c"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Play"
            android:id="@+id/play_bhajan"
            android:textColor="#ffffff"
            android:layout_marginLeft="100dp"
            android:background="#ad0f4c"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
    </RelativeLayout>